@using LaboratoryWork3.ViewModels
@using Microsoft.AspNetCore.Components
@using LaboratoryWork3.Models.Data
@inject UserAuthenticationViewModel UserAuthViewModel

<Modal @ref="LoginModal">
    <ModalHeader>
        <h3>Login</h3>
    </ModalHeader>
    <ModalBody>
        <div class="form-group">
                <label for="email">Email:</label>
                <input id="email" class="form-control" @bind="@user.Email" />
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input id="password" type="password" class="form-control" @bind="@user.Password" />
            </div>
        <button @onclick="LoginUser" class="btn btn-primary">Login</button>
    </ModalBody>
</Modal>

@code {
    private User user = new User();
    private Modal LoginModal;

    private async Task LoginUser()
    {
        await UserAuthViewModel.LoginAsync(user.Email, user.Password);
        await LoginModal.Hide();
    }

    public void Show() => LoginModal.Show();
}